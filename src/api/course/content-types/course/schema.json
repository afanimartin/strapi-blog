{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "cover_image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "duration": {
      "type": "integer",
      "required": true
    },
    "start_date": {
      "type": "date"
    },
    "mode": {
      "type": "enumeration",
      "enum": [
        "in-person",
        "online"
      ],
      "required": true
    }
  }
}
